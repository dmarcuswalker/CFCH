@echo off & setlocal EnableDelayedExpansion
for %%a IN ("*.wav") do (ffmpeg -i "%%a" -filter_complex "[0:a]showspectrum=mode=separate:slide=scroll:saturation=1.8:scale=log:gain=40:color=fire:s=640x518,pad=900:720,format=yuv420p[vs];[0:a]avectorscope=s=260x260:zoom=5:rc=40:gc=160:bc=80:rf=15:gf=10:bf=0:af=5:m=lissajous:rate=100:draw=dot:scale=lin,format=yuv420p[ss];[0:a]showvolume=o=v:h=120:w=240:r=120:dm=30:b=5[sv];[0:a]compand,showwaves=s=900x202:mode=cline:n=20:r=120:draw=full,format=yuv420p[sw];[vs][ss]overlay=H-80[bs];[bs][sv]overlay=H-73:h+39[bg];[bg][sw]overlay=0:H-h,drawtext=text="%%a"':fontcolor=White@0.5: fontsize=30:font=Arial:x=(w-text_w)/20:y=(h-text_h)/20" -map 0:a "%%~na.mp4")
pause
